{
    "name": "xima/xima-recent-updates-widget",
    "description": "A widget for the dashboard to display new and recently updated elements.",
    "type": "typo3-cms-extension",
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "XIMA MEDIA GmbH",
            "email": "kontakt@xima.de"
        }
    ],
    "require": {
        "typo3/cms-backend": "^12.0",
        "typo3/cms-core": "^12.0",
        "typo3/cms-dashboard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Xima\\XimaRecentUpdatesWidget\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "xima_recent_updates_widget"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": false,
            "typo3/cms-composer-installers": false
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.25"
    }
}
